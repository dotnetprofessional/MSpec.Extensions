          	 	<li class="end"><a href="#">Contact</a></li>
        	</ul>
	</div>
    </nav>

    <div id="body" class="width">
		
        <section id="content">
<article>

    <h3 name="@Model.Selected.Name">@Model.Selected.Name</h3>
    <p>@Raw(Model.Selected.Narration.ToStory())</p>
    <table cellspacing="0">
        <tr>
            <th align="left">Description</th>
            <th align="left">Progress</th>
            <th>Scenarios</th>
            <th>Success</th>
            <th>Failed</th>
            <th>Pending</th>
            <th>Ignored</th>
        </tr>
        @foreach (var story in Model.Selected.Stories)
        {
            <tr>
                <td><div id="status-@story.Statistics.Status"></div>&nbsp;&nbsp;<a href="@(story.TypeName).html">Story:&nbsp;@story.Name</a></td>
                <td><div class="bar"><div style="width: @story.Statistics.SucessPercent%"></div></div>&nbsp;&nbsp;@story.Statistics.SucessPercent%</td>
                <td align="center">@story.Statistics.Total</td>
                <td align="center">@story.Statistics.PassCount</td>
                <td align="center">@story.Statistics.FailedCount</td>
                <td align="center">@story.Statistics.NotImplementedCount</td>
                <td align="center">@story.Statistics.IgnoredCount</td>
            </tr>
            foreach (var scenario in story.Scenarios)
            {
                <tr>
                    <td><div id="status-@story.Statistics.Status"></div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@scenario.Name</td>
                    <td><div class="bar"><div style="width: @scenario.Statistics.SucessPercent%"></div></div>&nbsp;&nbsp;@scenario.Statistics.SucessPercent%</td>
                    <td align="center">@scenario.Statistics.Total</td>
                    <td align="center">@scenario.Statistics.PassCount</td>
                    <td align="center">@scenario.Statistics.FailedCount</td>
                    <td align="center">@scenario.Statistics.NotImplementedCount</td>
                    <td align="center">@scenario.Statistics.IgnoredCount</td>
                </tr>
            }
        }
    </table>
    <br/>

    </article>
        </section>
        
        <aside class="sidebar">

           <ul>	
               <li>
                    <h4>Stories</h4>
                    <ul>
                        @foreach (var story in Model.Selected.Stories)
                        {
                            <li><div id="status-@story.Statistics.Status"></div>&nbsp;&nbsp;<a href="#@story.TypeName">@story.Name</a></li>
                        }
                    </ul>
                </li>
            </ul>
		
        </aside>
